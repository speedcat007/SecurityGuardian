<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp">
    <!--app_icon-->
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:contentDescription="@null"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/umeng_socialize_wechat"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <!--app_name-->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:text="微信" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:src="@drawable/umeng_socialize_gprs" />
                <View
                    android:layout_width="1.0dp"
                    android:layout_height="10dip"
                    android:background="#19000000"/>
                <ImageView
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:src="@drawable/umeng_socialize_net_upload" />
                <TextView
                    android:id="@+id/gprs_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1001.22KB"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:src="@drawable/umeng_socialize_net_download" />
                <TextView
                    android:id="@+id/gprs_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1001.22KB"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/gprs_choice"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:button="@drawable/memory_selector"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:src="@drawable/umeng_socialize_wifi" />

                <View
                    android:layout_width="1.0dp"
                    android:layout_height="10dip"
                    android:background="#19000000" />
                <ImageView
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:src="@drawable/umeng_socialize_net_upload" />

                <TextView
                    android:id="@+id/wifi_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1001.22KB"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:src="@drawable/umeng_socialize_net_download" />

                <TextView
                    android:id="@+id/wifi_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1001.22KB"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/wifi_choice"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:button="@drawable/memory_selector"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

