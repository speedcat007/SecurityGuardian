<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:autoNS="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <cn.edu.njust.securityguardian.ui.TitleBackView
        autoNS:titleText="@string/log_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="生成日期   ："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2014-07-12"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="生成时间   ："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18:36:12"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="采取手段   ："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭wifi"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="目标程序   ："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="目标程序ip："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_app_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="192.10.12.12"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="当前阈值   ："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_package_size_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1231b"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="上传包大小："
            android:textSize="@dimen/text_size"
            />
        <TextView
            android:id="@+id/tv_package_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="685b"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_log_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存报告"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        />
</LinearLayout>