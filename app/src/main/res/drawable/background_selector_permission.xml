<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@color/Lavender"/>
    <item android:state_checked="true" android:drawable="@color/Lavender"/>
    <item android:state_selected="true" android:drawable="@color/Lavender"/>
    <item >
        <shape >
            <corners android:radius="3dp"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/DarkGray"
                    android:width="1dp"/>
        </shape>
    </item>
</selector>